{
  "name": "@magik_io/grimoire",
  "version": "1.8.10",
  "description": "A Web Component Library for Genie",
  "engines": {
    "node": "21.*.*",
    "npm": "10.*.*"
  },
  "scripts": {
    "dev": "vite",
    "build": "rollup -c",
    "iterate": "git cliff -o && npm version patch && git push origin main --tags && npm publish --access public"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./dist/*.js": "./dist/*.js"
  },
  "imports": {
    "#components/*.js": "./dist/components/*.js"
  },
  "dependencies": {
    "@magik_io/mote": "^1.6.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@magik_io/lint_golem": "^2.2.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "eslint": "^9.5.0",
    "tslib": "^2.6.3",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.13.1",
    "vite": "^5.3.1",
    "vite-plugin-dts": "^3.9.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MagikIO/grimoire.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "Web Components",
    "magik"
  ],
  "authors": [
    {
      "name": "Antonio B.",
      "email": "Abourassa@AssetVal.com",
      "github": "https://github.com/Abourass"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MagikIO/grimoire/issues"
  },
  "browserslist": [
    "defaults and fully supports es6-module"
  ],
  "homepage": "https://github.com/MagikIO/grimoire#readme",
  "packageManager": "yarn@4.3.1"
}
