{
  "name": "@magik_io/grimoire",
  "version": "1.8.12",
  "description": "A Web Component Library for Genie",
  "engines": {
    "node": "22.*.*",
    "pnpm": "9.*.*"
  },
  "scripts": {
    "dev": "vite",
    "build": "rollup -c",
    "iterate": "pnpm version patch && git push origin main --tags && pnpm publish --access public"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./dist/*.js": "./dist/*.js"
  },
  "imports": {
    "#components/*.js": "./dist/components/*.js"
  },
  "dependencies": {
    "@magik_io/mote": "^1.6.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@magik_io/lint_golem": "^3.4.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "eslint": "^9.7.0",
    "rollup": "^4.18.1",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.3.3",
    "vite-plugin-dts": "^4.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MagikIO/grimoire.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "Web Components",
    "magik"
  ],
  "authors": [
    {
      "name": "Antonio B.",
      "email": "Abourassa@AssetVal.com",
      "github": "https://github.com/Abourass"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MagikIO/grimoire/issues"
  },
  "browserslist": [
    "defaults and fully supports es6-module"
  ],
  "homepage": "https://github.com/MagikIO/grimoire#readme",
  "packageManager": "pnpm@9.12.1+sha512.e5a7e52a4183a02d5931057f7a0dbff9d5e9ce3161e33fa68ae392125b79282a8a8a470a51dfc8a0ed86221442eb2fb57019b0990ed24fab519bf0e1bc5ccfc4"
}
