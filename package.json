{
  "name": "@magik_io/grimoire",
  "version": "1.11.0",
  "description": "A Web Component Library for Genie",
  "engines": {
    "node": ">=25.*.*"
  },
  "scripts": {
    "dev": "vite",
    "build": "rollup -c",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "iterate": "pnpm version minor && git push origin main --tags && pnpm publish --access public"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./dist/*.js": "./dist/*.js"
  },
  "imports": {
    "#components/*.js": "./dist/components/*.js"
  },
  "dependencies": {
    "@magik_io/mote": "^1.6.10",
    "@rollup/plugin-typescript": "^12.3.0",
    "ulid": "^3.0.1"
  },
  "devDependencies": {
    "@magik_io/lint_golem": "^3.6.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@testing-library/dom": "^10.4.1",
    "@vitest/ui": "^4.0.10",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.10",
    "rollup": "^4.53.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MagikIO/grimoire.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "Web Components",
    "magik"
  ],
  "authors": [
    {
      "name": "Antonio B.",
      "email": "Abourassa@AssetVal.com",
      "github": "https://github.com/Abourass"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MagikIO/grimoire/issues"
  },
  "browserslist": [
    "defaults and fully supports es6-module"
  ],
  "homepage": "https://github.com/MagikIO/grimoire#readme",
  "packageManager": "pnpm@10.22.0"
}
